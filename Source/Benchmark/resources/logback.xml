<configuration>
    <appender name="XES_FILE" class="ch.qos.logback.core.FileAppender">
        <file>process.log</file>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="XESLogger" level="info" additivity="false">
        <appender-ref ref="XES_FILE"/>
    </logger>

    <!-- Other logger configurations -->

    <root level="ERROR">
        <!-- Add other appenders for the root logger -->
    </root>
</configuration>
